extends ../../layouts/default

block intro
  script(src="/js/jquery/jquery-2.1.4.min.js")

  script.
    $(document).ready(function () {
      $("#myInput").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function () {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
  .container
    div(id="accordion" class="panel-group" aria-multiselectable="true")
      div(class="panel panel-default")
        div(class="panel-heading")
          h5(class="panel-title")
            a(data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne") Orders
        div(id="collapseOne" class="panel-collapse collapse in" aria-labelledby="headingOne")
          div(class="panel-body")
            div(class='input-group')
              input(id='myInput' type='text' name='myInput' placeholder='Search...' class='form-control' aria-describedby="icon")
              table(id="table" class ='table-sm table-hover')
                tbody(id='myTable')
                  each order in orders
                    tr
                    td
                      a(href='orders/' + order._id) #{order._id}
                    td #{order.dateStart}
                    td #{order.client}
                    td #{order.state}
                    td #{order.product}
      div(class="panel panel-default")
        div(class="panel-heading")
          h5(class="panel-title")
            a(data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo") Add Order
        div(id="collapseTwo" class="panel-collapse collapse")
          div(class="panel-body")
            form(method="post" id="newOrder")
              input(type='hidden', name='action', value='newOrder')
              .form-group
                label Client
                div(class="input-group")
                  select(name='client').form-control
                    option(selected=' ') (choose one)
                      each user in users
                        option(value=user._id, selected=formData.client == user._id)= user.name.full
              .form-group
                label Product
                input(type='text', id='product', class='form-control', name='product')
              .form-group
                label Damage
                input(type='text', id='damage', class="form-control", name='damage')
              .form-group
                label State
                div(class="input-group")
                  select(name='state').form-control
                    option(selected=' ') choose
                      each state in states
                        option(value=state.value, selected=formData.status == state.value)= state.label
              .form-group
                input(type='hidden', id='employee', class="form-control", name='employee', value=employee)
              .form-actions
                button(type='submit').btn.btn-primary Send
